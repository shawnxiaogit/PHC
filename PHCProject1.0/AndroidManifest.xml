<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vsi.phc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="5" 
        android:targetSdkVersion="8"/>
    
    
    <!-- 改变WiFi状态权限 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    
    <!-- 获取WiFi状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <!-- 蓝牙超级管理员权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>  
	<uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES"/>
     
	  
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
	<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    
    <!-- 获取网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 进入网络权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    
    
    <supports-screens 
        android:largeScreens="true"
        android:normalScreens="false"
        android:resizeable="true"
        android:anyDensity="true" 
        />
    
	<!-- 应用程序 -->
    <application
        android:icon="@drawable/my_app_icon"
        android:name="com.mobilercn.base.YTBaseApplication"
        android:label="@string/app_name" >
        
        <!-- 默认主界面，一个动画 -->
        <activity
            android:name=".PHCActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登录界面 -->
        <activity android:name="com.vsi.page.PHCLoginPage" android:theme="@style/WSWThemeDefault"></activity>
        <!-- 主菜单界面 -->
        <activity android:name="com.vsi.page.PHCMenuPage" android:theme="@style/WSWThemeDefault"></activity>
        <!-- 国家标准界面 -->
        <activity android:name="com.vsi.page.PHCStateStandardActivity" android:theme="@style/WSWThemeDefault"></activity>
        <!-- 录入监测信息界面 -->
        <activity android:name="com.vsi.page.PHCInfoPage" android:theme="@style/WSWThemeDefault"></activity>
        <!-- 默认报表界面 -->
        <activity android:name="com.vsi.page.PCHTablePage" android:theme="@style/WSWThemeDefault"></activity>
        <!-- 鼠监测报表界面 -->
        <activity android:name="com.vsi.page.PCHMouseTablePage" android:theme="@style/WSWThemeDefault"/>
        <!-- 蚊监测报表界面 -->
        <activity android:name="com.vsi.page.PCHMosquitoTablePage" android:theme="@style/WSWThemeDefault"/>
        <!-- 蟑螂监测报表界面 -->
        <activity android:name="com.vsi.page.PCHKockroachTablePage" android:theme="@style/WSWThemeDefault"/>
        <!-- 蝇监测报表界面 -->
        <activity android:name="com.vsi.page.PCHFlyTablePage" android:theme="@style/WSWThemeDefault"/>
        <!-- 新增鼠监测信息录入界面 -->
        <activity android:name="com.vsi.page.PHCMousePage" android:theme="@style/WSWThemeDefault"></activity>
        <!-- 新增蚊监测信息录入界面 -->
        <activity android:name="com.vsi.page.PHCMosquitoPage" android:theme="@style/WSWThemeDefault"/>
        <!-- 新增蟑螂监测信息录入界面 -->
        <activity android:name="com.vsi.page.PHCKrockroachPage" android:theme="@style/WSWThemeDefault"/>
        <!-- 新增蝇监测信息录入界面 -->
        <activity android:name="com.vsi.page.PHCFlyPage" android:theme="@style/WSWThemeDefault"/>
        <!-- 超声波新界面 -->
        <activity android:name="com.vsi.page.PHCChaoShengBo" android:theme="@style/WSWThemeDefault"/>
       	<!-- 蓝牙设备界面 -->
        <activity android:name="com.vsi.page.D2EDeviceListActivity" android:theme="@style/WSWThemeDefault"/>
        <!-- 蓝牙服务 -->
        <service android:name="com.mobilercn.sop.bt.SOPBluetoothService"></service>
    </application>
    
</manifest>