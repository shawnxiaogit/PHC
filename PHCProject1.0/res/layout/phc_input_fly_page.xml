<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="10.0dip" >

        <!-- 蝇监测方法可编辑输入下拉框 -->

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/public_line" >

            <!-- 蝇监测方法输入框 -->

            <AutoCompleteTextView
                android:id="@id/et_fly_method"
                style="@style/et_text_style"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/tv_flyName"
                android:background="@null"
                android:hint="@string/input_fly_method"
                android:maxLength="20"
				android:layout_marginLeft="10.0dip"
                android:enabled="false"
                android:paddingRight="20dip"
                android:textColor="#ff0b70a4" />
            <!-- 蝇监测方法 文本展示 -->

            <TextView
                android:id="@id/tv_flyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_fly_method"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="7.0dip"
                android:text="@string/tv_fly_method"
                style="@style/info_tv_style" />
            <!-- 下拉按钮 -->

            <ImageButton
                android:id="@id/ibtn_dropDown_fly_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/layout"
                android:layout_alignRight="@id/et_fly_method"
                android:layout_alignTop="@+id/layout"
                android:layout_marginLeft="1.0dip"
                android:background="@drawable/more_select" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
"

