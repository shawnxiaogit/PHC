                    <!-- 备注 -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_bottom" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/fly_remark"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_in_remark"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="@string/fly_please_write"
                            android:imeOptions="actionNext"
                            android:maxLines="15"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            style="@style/et_text_style" />
                    </RelativeLayout>
