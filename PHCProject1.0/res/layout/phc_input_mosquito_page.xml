<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        
        android:paddingBottom="10.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="10.0dip" >

        <!-- 蚊监测地点可编辑输入下拉框 -->

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/public_line" >

            <!-- 蚊监测地点输入框 -->

            <AutoCompleteTextView
                android:id="@id/et_mosquito_monitor_place"
                style="@style/et_text_style"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/tv_mosquito_monitor_place"
                android:background="@null"
                android:hint="@string/input_mosquito_monitor_place"
                android:maxLength="20"
                android:enabled="false"
                android:layout_marginLeft="10.0dip"
                android:paddingRight="20dip"
                android:textColor="#ff0b70a4" />
            <!-- 蚊监测地点 文本展示 -->

            <TextView
                android:id="@id/tv_mosquito_monitor_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_mosquito_monitor_place"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="7.0dip"
                android:text="@string/tv_mosquito_monitor_place"
                style="@style/info_tv_style" />
            <!-- 下拉按钮 -->

            <ImageButton
                android:id="@id/ibtn_dropDown_mosquito_monitor_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/layout"
                android:layout_alignRight="@id/et_mosquito_monitor_place"
                android:layout_alignTop="@+id/layout"
                android:layout_marginLeft="1.0dip"
                android:background="@drawable/more_select" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 街道名称 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/public_line_top" >

                <TextView
                    android:id="@id/LabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/mosquito_street_name"
                    style="@style/info_tv_style" />

                <EditText
                    android:id="@id/edit_street"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/LabelTextView"
                    android:background="#ffffffff"
                    android:ellipsize="end"
                    android:hint="@string/mosquito_please_write"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    style="@style/et_text_style" />
            </RelativeLayout>
            <!-- 场所类型下拉框 -->

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/public_line_mid" >

                <!-- 场所类型输入框 -->

                <AutoCompleteTextView
                    android:id="@id/et_mosquito_place_type"
                    style="@style/et_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="40.0dip"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_mosquito_place_type"
                    android:background="@null"
                    android:hint="@string/input_mosquito_place_type"
                    android:maxLength="20"
                    android:enabled="false"
                    android:layout_marginLeft="10.0dip"
                    android:paddingRight="20dip"
                    />
                <!-- 场所类型 文本展示 -->

                <TextView
                    android:id="@id/tv_mosquito_place_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/et_mosquito_place_type"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="7.0dip"
                    android:text="@string/tv_mosquito_place_type"
                    style="@style/info_tv_style" />
                <!-- 下拉按钮 -->

                <ImageButton
                    android:id="@id/ibtn_dropDown_mosquito_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/layout1"
                    android:layout_alignRight="@id/et_mosquito_place_type"
                    android:layout_alignTop="@+id/layout1"
                    android:layout_marginLeft="1.0dip"
                    android:background="@drawable/more_select" />
            </RelativeLayout>
            <!-- 场所名称 -->

            <RelativeLayout
                android:id="@id/panel_mosqito_palce_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/public_line_bottom" >

                <TextView
                    android:id="@id/LabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/mosquito_place_name"
                    style="@style/info_tv_style" />

                <EditText
                    android:id="@id/edit_mosqito_palce_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/LabelTextView"
                    android:background="#ffffffff"
                    android:ellipsize="end"
                    android:hint="@string/mosquito_please_write"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    style="@style/et_text_style" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <!-- 单位居民区外环境容器 -->

                <LinearLayout
                    android:id="@id/panel_mosquito_out"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <!-- 积水容器(下水道)数 -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_mid" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_pond_number"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_pond_num"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="#ffffffff"
                            android:ellipsize="end"
                            android:hint="@string/mosquito_please_write"
                            android:imeOptions="actionNext"
                            android:numeric="integer"
                            android:singleLine="true"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                    <!-- 阳性数 -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_mid" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_pos_pond_number"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_pos_pond"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="#ffffffff"
                            android:ellipsize="end"
                            android:hint="@string/mosquito_please_write"
                            android:imeOptions="actionNext"
                            android:numeric="integer"
                            android:singleLine="true"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                    <!-- 密度(阳性积水数/有积水数) -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_mid" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_density_pond"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_desi_pond"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="#ffffffff"
                            android:ellipsize="end"
                            android:hint="@string/mosquito_density_pond_explain"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                    <!-- 备注 -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_bottom" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_remark"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_out_remark"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="@string/input_option"
                            android:imeOptions="actionNext"
                            android:maxLines="15"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                </LinearLayout>
                <!-- 池塘或河流等大中型水体 -->

                <LinearLayout
                    android:id="@id/panel_mosquito_in"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <!-- 采集勺数 -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_mid" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_coll_spoo_number"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_coll_spoo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="#ffffffff"
                            android:ellipsize="end"
                            android:hint="@string/mosquito_please_write"
                            android:imeOptions="actionNext"
                            android:numeric="integer"
                            android:singleLine="true"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                    <!-- 阳性勺数 -->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_mid" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_pos_spoo_number"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_pos_spoo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="#ffffffff"
                            android:ellipsize="end"
                            android:hint="@string/mosquito_please_write"
                            android:imeOptions="actionNext"
                            android:numeric="integer"
                            android:singleLine="true"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                    <!-- 密度(阳性勺数/总勺数) -->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_mid" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_density_spoo"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_densi_spoo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="#ffffffff"
                            android:ellipsize="end"
                            android:hint="@string/mosquito_density_spoo_explain"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                    <!-- 备注 -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_bottom" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/mosquito_remark"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_in_remark"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="@string/input_option"
                            android:imeOptions="actionNext"
                            android:maxLines="15"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                </LinearLayout>

                <!--
        <RelativeLayout android:background="@drawable/public_line_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/LabelTextView" android:textSize="18.0dip" android:textStyle="bold" android:textColor="#ff343434" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="鼠  密  度" android:layout_centerVertical="true" />
            <EditText android:gravity="center" android:hint="粘捕鼠数/张" android:textSize="18.0dip" android:textStyle="bold" android:textColor="#ff0b70a4" android:ellipsize="end" android:id="@id/edit_density_sum" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="10.0dip" android:singleLine="true" android:layout_toRightOf="@id/LabelTextView" android:layout_centerVertical="true" android:imeOptions="actionNext" />
        </RelativeLayout>
                -->
            </FrameLayout>

            <LinearLayout
                android:id="@id/menu_mosquito_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="10.0dp"
                android:gravity="center" >

                <Button
                    android:id="@id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4.0dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_add"
                    android:text="@string/mosquito_btn_back"
                    style="@style/info_tv_style" />

                <Button
                    android:id="@id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4.0dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_add"
                    android:text="@string/mosquito_btn_reset"
                    style="@style/info_tv_style" />

                <Button
                    android:id="@id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_add"
                    android:text="@string/mosquito_btn_save"
                    style="@style/info_tv_style" />
            </LinearLayout>
