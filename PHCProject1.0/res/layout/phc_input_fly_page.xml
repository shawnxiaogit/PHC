                            android:layout_marginLeft="5.0dip"
                            android:text="@string/fly_catch_number"
                            style="@style/info_tv_style" />

                        <EditText
                            android:id="@id/edit_catch_fly_number"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_toRightOf="@id/LabelTextView"
                            android:background="#ffffffff"
                            android:ellipsize="end"
                            android:hint="@string/input_should"
                            android:imeOptions="actionNext"
                            android:numeric="integer"
                            android:singleLine="true"
                            style="@style/et_text_style" />
                    </RelativeLayout>
                    <!-- 密度(粘捕蝇数/条) -->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/public_line_mid" >

                        <TextView
                            android:id="@id/LabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5.0dip"
                            android:text="@string/fly_sticky_catch_desity"
